{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"rootDir": "./src",
		"moduleResolution": "node10",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true
	}
}
